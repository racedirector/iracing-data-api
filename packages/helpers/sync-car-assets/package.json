{
  "name": "@iracing-data/sync-car-assets",
  "version": "0.0.2-alpha.2",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "sync-iracing-car-assets": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "build:executable:macos": "./scripts/build-executable-macos.sh",
    "build:executable:windows": "./scripts/build-executable-windows.sh",
    "bundle": "esbuild src/cli.ts --bundle --platform=node --tsconfig=tsconfig.build.json --outfile=build/cli.cjs --format=cjs"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^13.1.0",
    "@iracing-data/api-client": "workspace:*",
    "@iracing-data/api-schema": "workspace:*",
    "commander": "^14.0.0",
    "dotenv": "16.4.7"
  },
  "devDependencies": {
    "esbuild": "^0.25.9"
  }
}